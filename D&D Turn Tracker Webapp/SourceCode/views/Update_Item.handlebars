<form id="update-item" name='update-item' class="row">
    <div class="mb-3 col-4">
        <label class="form-label">Name (required)</label>
        <input type="text" class="form-control" id="name" name="name" value="{{selectedItem.name}}" required>
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Effect</label>
        <input type="text" class="form-control" id="effect" name="effect" value="{{selectedItem.effect}}">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Type</label>
        <input type="text" class="form-control" id="type" name="type" value="{{selectedItem.type}}">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Quantity (required)</label>
        <input type="number" class="form-control" id="quantity" name="quantity" value="{{selectedItem.quantity}}" required>
    </div>

    <div class="mb-3 form-check col-4 my-auto">
        <input type="checkbox" class="form-check-input mx-auto" id="exampleCheck1" name="isMagic" {{checked
            selectedItem.isMagic}} value=1>
        <label class="form-check-label mx-auto" for="exampleCheck1">Magic Item?</label>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg col-2"
            onclick="updateItem({{selectedItem.itemID}})">Update</button>
    </div>
</form>